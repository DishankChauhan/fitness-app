# Firebase Configuration
EXPO_PUBLIC_FIREBASE_API_KEY=your_api_key_here
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
EXPO_PUBLIC_FIREBASE_APP_ID=1:your_app_id
EXPO_PUBLIC_FIREBASE_MEASUREMENT_ID=G-your_measurement_id

# Stripe Configuration
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_publishable_key
STRIPE_SECRET_KEY=sk_test_your_secret_key
EXPO_PUBLIC_STRIPE_MERCHANT_ID=merchant.com.accountability

# API Configuration
EXPO_PUBLIC_API_URL=https://your-api-url.com
EXPO_PUBLIC_API_TIMEOUT=30000

# App Configuration
EXPO_PUBLIC_MAX_RETRIES=3
EXPO_PUBLIC_APP_ENV=development # development, staging, production

# Solana Configuration
EXPO_PUBLIC_SOLANA_NETWORK=devnet # devnet, testnet, mainnet-beta
EXPO_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com

# Analytics and Monitoring
EXPO_PUBLIC_ENABLE_ANALYTICS=true
EXPO_PUBLIC_ENABLE_CRASHLYTICS=true
EXPO_PUBLIC_ENABLE_PERFORMANCE=true 